#include <stdio.h>

int main() {
    int anos;
    int meses;
    int dias;
    

    printf("Digite a idade em anos: ");
    scanf("%d", &anos);

    printf("Digite a idade em meses: ");
    scanf("%d", &meses);

    printf("Digite a idade em dias: ");
    scanf("%d", &dias);

    int idade = (anos * 365) + (meses * 30) + dias;

    printf("A idade em dias Ã©: %d dias\n", idade);
    
    return 0;
}
